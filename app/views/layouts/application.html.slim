doctype html
html
  head
    title Wediko Gift Exchange
    = stylesheet_link_tag    'application', request[:controller], media: 'all', 'data-turbolinks-track' => true
    = javascript_include_tag 'application', 'data-turbolinks-track' => true
    = csrf_meta_tags

  body
    = render 'modules/header'
    - if flash[:alert]
      .alert.alert-danger= flash[:alert]
    - if flash[:notice]
      .alert.alert-info= flash[:notice]

    - if @back_route.present?
      = render partial: 'modules/back_button'
    div.container-fluid.footer-pad
      = yield
    = render 'modules/footer'

